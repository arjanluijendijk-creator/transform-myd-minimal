#!/bin/bash
# Wrapper script for transform-myd-minimal

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Add src to PYTHONPATH so the package can be imported
export PYTHONPATH="$SCRIPT_DIR/src:$PYTHONPATH"

# Execute the Python package as a module with all arguments  
cd "$SCRIPT_DIR" && python3 -m transform_myd_minimal "$@"
